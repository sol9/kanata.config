(defcfg
  ;;process-unmapped-keys yes
)

(defsrc
  caps
  bspc
  u i o p
  h j k l
)

(defvar
  tap-time 200
  hold-time 150
)

(defalias
  caps-thp (tap-hold-press $tap-time $hold-time caps (layer-while-held caps-layer))
)

(deflayer base
  @caps-thp
  bspc
  u i o p
  h j k l
)

(deflayer caps-layer
  _
  del
  home end pgup pgdn
  left down up rght
)
 