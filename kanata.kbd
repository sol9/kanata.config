(defcfg
  ;;process-unmapped-keys yes
)

(defsrc
  caps
  y u i o p
  h j k l
  b n m
)

(defvar
  tap-time 200
  hold-time 150
)

(defalias
  caps-thp (tap-hold-press $tap-time $hold-time caps (layer-while-held caps-layer))
)

(deflayer base
  @caps-thp
  y u i o p
  h j k l
  b n m
)

(deflayer caps-layer
  _
  bspc home end pgup pgdn
  left down up rght
  del C-left C-rght
)
 
